<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>ServletListeVilles</servlet-name>
        <servlet-class>com.twic.twic2_client.Servlets.ServletListeVilles</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletListeVilles</servlet-name>
        <url-pattern>/listeVilles</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletIndex</servlet-name>
        <servlet-class>com.twic.twic2_client.Servlets.ServletIndex</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletIndex</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletDistance</servlet-name>
        <servlet-class>com.twic.twic2_client.Servlets.ServletDistance</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletDistance</servlet-name>
        <url-pattern>/distance</url-pattern>
    </servlet-mapping>


    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
        </jsp-property-group>
    </jsp-config>
</web-app>